{
  "version": "2.1.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/*.spec.{ts,tsx}",
    "**/*.story.tsx"
  ],
  "command": {
    "version": {
      "message": "chore(release): %s",
      "allowBranch": [
        "hotfix-*",
        "release-*"
      ],
      "conventionalCommits": true
    }
  }
}
