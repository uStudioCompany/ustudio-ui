{
  "name": "ustudio-ui",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "start-storybook",
    "format": "prettier --check \"packages/**/*.{ts,tsx}\"",
    "lint": "eslint --quiet --color \"packages/**/*.{ts,tsx}\"",
    "typecheck": "tsc -p ./tsconfig.ci.json",
    "prebuild": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "prepack": "node scripts/create-meta-files.js",
    "build:dts": "tsc -b tsconfig.build.json",
    "build:js": "lerna run build",
    "build": "npm-run-all -s build:dts build:js",
    "test": "jest",
    "ci": "npm-run-all format lint typecheck -s build test",
    "release": "lerna version --yes --conventional-commits --create-release github",
    "prepublishOnly": "yarn build",
    "publish": "lerna publish --yes --contents lib",
    "deploy": "storybook-to-ghpages --ci"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@storybook/addon-essentials": "^6.0.3",
    "@storybook/react": "^6.0.3",
    "@storybook/storybook-deployer": "^2.8.6",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/react": "^10.4.8",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-preset-react-app": "^9.1.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unicorn": "^20.1.0",
    "jest": "^26.3.0",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "styled-components": "^5.1.1",
    "ts-jest": "^26.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.0.2"
  }
}
