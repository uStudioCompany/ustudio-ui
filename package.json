{
  "version": "1.0.0",
  "author": "uStudio Front End Department",
  "private": true,
  "scripts": {
    "ustudio-ui:dev": "yarn --cwd packages/ustudio-ui dev",
    "ustudio-ui:build": "yarn --cwd packages/ustudio-ui build",
    "ustudio-ui:release": "yarn --cwd packages/ustudio-ui release",
    "docs-website:dev": "yarn ustudio-ui:build && yarn --cwd packages/docs-website dev",
    "docs-website:build": "yarn ustudio-ui:build && yarn --cwd packages/docs-website build",
    "docs-website:deploy": "yarn ustudio-ui:build && yarn --cwd packages/docs-website deploy"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.20.2"
  }
}
