{
  "name": "ustudio-ui",
  "version": "1.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "uStudio Front-end Department",
  "scripts": {
    "create-component": "./scripts/create-component.sh",
    "clean": "rimraf lib",
    "dev": "start-storybook -p 9009 -s public",
    "build:components": "babel src --out-dir lib --config-file ./.storybook/babel.config.js",
    "build:dts": "copyfiles -u 1 -e src/react-app-env.d.ts -e src/typings.d.ts 'src/**/*.d.ts' lib",
    "build": "npm-run-all clean -p build:components build:dts",
    "copy-files": "node scripts/copy-files.js",
    "release": "yarn build && yarn copy-files && yarn publish lib"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@storybook/addon-knobs": "^5.3.2",
    "@storybook/addons": "^5.3.2",
    "@storybook/preset-create-react-app": "^2.0.0",
    "@storybook/react": "^5.3.2",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.0.1",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "babel-plugin-styled-components": "^1.10.7",
    "copyfiles": "^2.2.0",
    "husky": "^4.0.7",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.1",
    "rimraf": "^3.0.2",
    "storybook-addon-jsx": "^7.1.13",
    "styled-components": "^5.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.9.0",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "ie 11",
      "edge >= 14",
      "firefox >= 52",
      "chrome >= 49",
      "safari >= 10"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "ssr": [
      "node >= 12"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "license": "MIT"
}
