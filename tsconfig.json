{
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "packages/*/lib"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["jest"],
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@ustudio-ui/contexts/*": ["packages/contexts/src/*"],
      "@ustudio-ui/core/*": ["packages/core/src/*"],
      "@ustudio-ui/fonts/*": ["packages/fonts/src/*"],
      "@ustudio-ui/fonts": ["packages/fonts/src/index.ts"],
      "@ustudio-ui/grid/*": ["packages/grid/src/*"],
      "@ustudio-ui/grid": ["packages/grid/src/index.ts"],
      "@ustudio-ui/prop-types/*": ["packages/prop-types/src/*"],
      "@ustudio-ui/theme/*": ["packages/theme/src/*"],
      "@ustudio-ui/theme": ["packages/theme/src/index.ts"],
      "@ustudio-ui/types/*": ["packages/types/src/*"],
      "@ustudio-ui/utils/*": ["packages/utils/src/*"]
    }
  }
}
